            <string>/// draw textbox and storytext 

draw_set_colour(c_black);
draw_rectangle(x, y, x+width, y+height,0);
draw_set_colour(c_orange);
draw_rectangle(x, y, x+width, y+height,1);

// if 
if (current_position &lt; string_length(story_text)) {
    // update last_space
    if (string_char_at(story_text, current_position) == " ") {
        last_space = current_position;
    }
    current_position ++;
}

// grab the str
str = string_copy(story_text, ds_list_find_value(start, line), current_position - ds_list_find_value(start, line));

// draw text 
draw_set_font(fnt);
draw_set_color(c_white);
draw_text(x0 + padding, y0 + padding, str);

// if current_line is too long
if (string_width(str) &gt; (width - 2*padding)) {
    story_text = string_delete(story_text, last_space, 1);
    story_text = string_insert("#", story_text, last_space);
    ds_list_add(start, last_space+1);
}

// if current text is too high 
if (string_height(str) &gt; height - 2*padding) {
    line++;
}





</string>
